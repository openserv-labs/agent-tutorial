{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es2022",
    "allowJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src", "lib"],
  "exclude": ["node_modules"]
}
